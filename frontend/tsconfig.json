{
  "compilerOptions": {
    // Specify ECMAScript target version
    "target": "ES2020",
    // Specify module code generation
    "module": "ESNext",
    // Specify library files to be included in the compilation
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    // Allow JavaScript files to be compiled
    "allowJs": true,
    // Skip type checking of declaration files
    "skipLibCheck": true,
    // Ensure consistent casing in file names
    "forceConsistentCasingInFileNames": true,
    // Enable all strict type-checking options
    "strict": true,
    // Do not emit outputs
    "noEmit": true,
    // Enable incremental compilation
    "incremental": true,
    // Specify module resolution strategy
    "moduleResolution": "node",
    // Enable importing .json files
    "resolveJsonModule": true,
    // Disallow inconsistently-cased references to the same file
    "esModuleInterop": true,
    // Enable experimental support for decorators
    "experimentalDecorators": true,
    // Enable emit interoperability between CommonJS and ES Modules
    "isolatedModules": true,
    // Specify JSX code generation
    "jsx": "preserve",
    // Generate corresponding .map files
    "sourceMap": true,
    // Redirect output structure to the directory
    "outDir": "./dist",
    // Specify the root directory of input files
    "rootDir": "./src"
  },
  // Specify files to include in compilation
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  // Specify files to exclude from compilation
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.spec.ts"
  ]
}

